#!/bin/bash

# Check if PYFILE environment variable is set
if [ -z "$PYFILE" ]; then
    echo "Error: PYFILE environment variable is not set."
    exit 1
fi

# Generate the output filename
OUTPUT_FILE="${PYFILE}c"

# Compile the Python script
echo "Compiling $PYFILE ..."
python3 -m py_compile "$PYFILE"

# Rename the compiled file to the desired output filename
mv "__pycache__/$PYFILE.cpython-$(python3 -c 'import sys;print(sys.implementation.cache_tag)')" "$OUTPUT_FILE"

# Clean up the __pycache__ directory
rm -rf "__pycache__"

